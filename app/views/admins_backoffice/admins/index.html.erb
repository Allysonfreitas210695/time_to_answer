
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header"><%= t('message.listing', model: @admins.model_name.human(count: @admins.count)) %></h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

 <div class="table-responsive">

    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th><%= translate_attribute(@admins, :email)%></th>
                <th>
                  <%= link_to 'Novo', new_admins_backoffice_admin_path, class:"btn btn-success"%>
                </th>
            </tr>
        </thead>
        <tbody>
            <% @admins.each do |admin| %>
            <tr>
                <td><%= admin.id %></td>
                <td><%= admin.email %></td>
                <td>
                  <%= link_to 'Editar', edit_admins_backoffice_admin_path(admin), class:"btn btn-warning "%>
                  <%= link_to 'Excluir', admins_backoffice_admin_path(admin),method: :delete, class:"btn btn-danger ", 
                  data: {confirm: t('message.confirm_with', item: admin.email)} %>
                </td>
            </tr>
            <% end %>
        </tbody>
    </table>
    <div class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container-fluid">
        <%= paginate @admins, style:'text-decoration: none' %>
      </div>
    </div>
 </div>