<div class="col-lg-12">
   <div class="panel panel-default">
      <h1 class="panel-heading">
        <%= action_messenger %> Administrador
      </h1>
      <div class="panel-body">
          <div class="row">
              <div class="col-lg-6">
                <%= form_with(model: [ :admins_backoffice, @admin ], local: true) do |form| %>         
                      <% if @admin.errors.any? %>
                          <div class="alert alert-danger alert-dismissable">
                              <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
                                <ul>
                                  <% @admin.errors.full_messages.each do |message| %>
                                      <li> <%= message %> </li>
                                  <% end %>
                                </ul>
                          </div>
                      <% end %>

                      <div class="form-group">
                        <%= form.label :email %>
                        <%= form.text_field :email, class:"form-control", placeholder: t('placeholder.admin_email')  %>
                      </div>

                      <div class="form-group">
                        <%= form.label :password %>
                        <%= form.text_field :password, class:"form-control", placeholder: t('placeholder.admin_password') %>
                      </div>

                      <div class="form-group">
                        <%= form.label :password_confirmation %>
                        <%= form.text_field :password_confirmation, class:"form-control", placeholder: t('placeholder.admin_password_confirmation') %>
                      </div>
                      
                  <%= form.submit t('buttons.save') %>
                <% end %>   
            </div>            <!-- /.col-lg-6 (nested) -->
          </div>
      </div>
    </div>
</div>