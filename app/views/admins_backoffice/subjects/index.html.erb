
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header"><%= t('message.listing', model: @subjects.model_name.human(count: @subjects.count)) %></h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

 <div class="table-responsive">

    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th><%= translate_attribute(@subjects, :description) %></th>
                <th>
                  <%= link_to 'Novo', new_admins_backoffice_subject_path, class:"btn btn-success"%>
                </th>
            </tr>
        </thead>
        <tbody>
            <% @subjects.each do |subject| %>
            <tr>
                <td><%= subject.id %></td>
                <td><%= subject.description %></td>
                <td>
                  <%= link_to 'Editar', edit_admins_backoffice_subject_path(subject), class:"btn btn-warning "%>
                  <%= link_to 'Excluir', admins_backoffice_subject_path(subject),method: :delete, class:"btn btn-danger ", 
                  data:{confirm: t('message.confirm_with', item: subject.description.truncate(20))} %>
                </td>
            </tr>
            <% end %>
        </tbody>
    </table>
    <div class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container-fluid">
        <%= paginate @subjects, style:'text-decoration: none' %>
      </div>
    </div>
 </div>