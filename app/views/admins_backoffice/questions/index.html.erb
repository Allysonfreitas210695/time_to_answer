
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header"> <%= t('message.listing', model: @questions.model_name.human(count: 2)) %> </h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

 <div class="table-responsive">

    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th><%= translate_attribute(@questions, :description) %></th>
                <th><%= translate_attribute(@questions, :subject) %></th>
                <th>
                  <%= link_to 'Novo', new_admins_backoffice_question_path, class:"btn btn-success"%>
                </th>
            </tr>
        </thead>
        <tbody>
            <% @questions.each do |question| %>
            <tr>
                <td><%= question.id %></td>
                <td><%= sanitize question.description.truncate(50) %></td>
                <td><%= question.subject.description.truncate(30) %></td>
                <td>
                  <%= link_to 'Editar', edit_admins_backoffice_question_path(question), class:"btn btn-warning "%>
                  <%= link_to 'Excluir', admins_backoffice_question_path(question),method: :delete, class:"btn btn-danger ",
                  data: {confirm: t('message.confirm_with', item: question.description.truncate(20))} %>
                </td>
            </tr>
            <% end %>
        </tbody>
    </table>
    <div class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container-fluid">
        <%= paginate @questions, style:'text-decoration: none' %>
      </div>
    </div>
 </div>
